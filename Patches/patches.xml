<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/FactionDef[permanentEnemy="true" and not(autoFlee="false")]</xpath>
    <value>
      <autoFlee>false</autoFlee>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[permanentEnemy="true" and autoFlee="false"]/autoFlee</xpath>
    <value>
      <autoFlee>false</autoFlee>
    </value>
  </Operation>
</Patch>